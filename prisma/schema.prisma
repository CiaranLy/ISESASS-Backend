generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id         Int       @id @default(autoincrement())
  email      String    @unique
  name       String
  password   String
  createdAt  DateTime  @default(now())

  // 1-many relation
  posts      Posts[]
}

model Posts {
  id          Int         @id @default(autoincrement())
  posterId    Int
  poster      Users       @relation(fields: [posterId], references: [id], onDelete: Cascade)

  price       Int
  semester    Semester
  bed         Bed
  bathroom    Bathroom
  ensuite     Boolean     @default(false)
  roommates   Int
  notes       String      @db.Text

  // 1-1 relation (required): FK on Posts
  locationId  Int         @unique
  location    Locations   @relation(fields: [locationId], references: [id], onDelete: Cascade)

  @@index([posterId])
}

model Locations {
  id       Int     @id @default(autoincrement())
  post     Posts?

  line_1   String
  line_2   String?
  town     String
  city     String
  county   String
  eircode  String?
}

enum Semester {
  autumn
  spring
  summer
}

enum Bed {
  single
  double
}

enum Bathroom {
  shared
  personal
}